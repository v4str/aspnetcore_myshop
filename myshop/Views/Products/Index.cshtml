@model IEnumerable<myshop.Models.Product>

@{
    ViewBag.Title = "Игры";
}

<div class="container">
    <div class="row">
        
            @foreach (var item in Model)
            {<div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="~/images/holder.svg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <a asp-action="AddToCart" asp-route-id="@item.Id" asp- class="btn btn-primary"> @item.Price р</a>
                    </div>
                </div>
            </div>
    }

    </div>
</div>

