@model List<myshop.Models.Product>

    @*@foreach(var item in Model)
    {
        <h1>@item.Name</h1>
    }*@

<div class="pb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

                <!-- Shopping cart table -->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" class="border-0 bg-light">
                                    <div class="p-2 px-3 text-uppercase">Продукт</div>
                                </th>
                                <th scope="col" class="border-0 bg-light">
                                    <div class="py-2 text-uppercase">Цена</div>
                                </th>
                                <th scope="col" class="border-0 bg-light">
                                    <div class="py-2 text-uppercase">Количество</div>
                                </th>
                                <th scope="col" class="border-0 bg-light">
                                    <div class="py-2 text-uppercase">Удалить</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row" class="border-0">
                                        <div class="p-2">
                                            <img src="@item.ProductPhotos.Select(x => x.URL).First()" alt="" width="70" class="img-fluid rounded shadow-sm">
                                            <div class="ml-3 d-inline-block align-middle">
                                                <h5 class="mb-0"> <a href="#" class="text-dark d-inline-block align-middle">@item.Name</a></h5><span class="text-muted font-weight-normal font-italic d-block">Category: Games</span>
                                            </div>
                                        </div>
                                    </th>
                                    <td class="border-0 align-middle"><strong>@item.Price</strong></td>
                                    <td class="border-0 align-middle"><strong><input type="number" min="0" /></strong></td>
                                    <td class="border-0 align-middle"><a href="#" class="text-dark"><i class="fa fa-trash"></i></a></td>
                                </tr>

                            }


                        </tbody>
                    </table>
                </div>
                <!-- End -->
            </div>
        </div>

        <div class="row py-5 p-4 bg-white rounded shadow-sm">
            <div class="col-lg-6">
                <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Промокод</div>
                <div class="p-4">
                    <p class="font-italic mb-4">Если у вас есть промокод, пожалуйста, введите его в окне ниже</p>
                    <div class="input-group mb-4 border rounded-pill p-2">
                        <input type="text" placeholder="Применить купон" aria-describedby="button-addon3" class="form-control border-0">
                        <div class="input-group-append border-0">
                            <button id="button-addon3" type="button" class="btn btn-dark px-4 rounded-pill"><i class="fa fa-gift mr-2"></i>Применить купон</button>
                        </div>
                    </div>
                </div>
                <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Пожелания к заказу</div>
                <div class="p-4">
                    <p class="font-italic mb-4">Если у вас есть дополнительные пожелания по заказу - вы можете оставить их в поле ниже.</p>
                    <textarea name="" cols="30" rows="2" class="form-control"></textarea>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Сумма заказа </div>
                <div class="p-4">
                    <p class="font-italic mb-4">Стоимость доставки рассчитывается из введенных вами данных.</p>
                    <ul class="list-unstyled mb-4">
                        <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Сумма заказа </strong><strong>@Model.Select(x => Convert.ToInt32(x.Price)).Sum()</strong></li>
                        <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Доставка</strong><strong>0</strong></li>
                        <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Чаевые</strong><strong>$0</strong></li>
                        <li class="d-flex justify-content-between py-3 border-bottom">
                            <strong class="text-muted">Всего</strong>
                            <h5 class="font-weight-bold">@Model.Select(x => Convert.ToInt32(x.Price)).Sum()</h5>
                        </li>
                    </ul><a href="#" class="btn btn-dark rounded-pill py-2 btn-block">Оформить заказ</a>
                </div>
            </div>
        </div>

    </div>
</div>
</div>